{
	"default_module": "powerline.segments.common",
	"segments": {
		"left": [
			{
				"function": "hostname",
				"priority": 10,
				"before": " ",
				"args": {
					"only_if_ssh": true,
					"exclude_domain": true
				}
			},
			{
				"function": "user",
				"priority": 30
			},
			{
				"function": "virtualenv",
				"priority": 50,
				"before": "ⓔ  "
			},
			{
				"function": "branch",
				"priority": 40,
				"before": " ",
				"args": {
					"status_colors": true
				}
			},
			{
				"function": "powerline.segments.shell.cwd",
				"priority": 10,
				"args": {
					"dir_limit_depth": 2
				}
			}
		]
	}
}
