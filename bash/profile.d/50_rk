# customizations for the rk user
#
if [[ $USER -eq 'rk' ]]; then
  # update global known hosts file
  curl -q -s -f 'http://puppet.runkeeper.com/statics/rk-known-hosts' -o '/tmp/rk-known-hosts' 2>/dev/null
  if [ $? == 0 ]; then
    mv /tmp/rk-known-hosts "${HOME}/.ssh/rk-known-hosts" >/dev/null 2>&1
  fi
fi
